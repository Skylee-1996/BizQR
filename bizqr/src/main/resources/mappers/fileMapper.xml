<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ezen.bizqr.board.repository.FileMapper">

    <insert id="insertFile">
        insert into file(uuid, store_id, file_name, file_type, bno, file_size, save_dir)
        values(#{uuid},#{storeId},#{fileName},#{fileType},#{bno},#{fileSize}, #{saveDir})
    </insert>

    <select id="getFileList" resultType="ezen.bizqr.board.domain.FileVO">
        select * from file where bno = #{bno}
    </select>

    <delete id="deleteFile">
        delete from file where uuid = #{uuid}
    </delete>

    <select id="selectListAllFile" resultType="ezen.bizqr.board.domain.FileVO">
        select * from file;
    </select>

</mapper>